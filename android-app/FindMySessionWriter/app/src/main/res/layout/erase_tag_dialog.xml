<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp" 
    android:background="#FFF"
    >
    
     <TextView
        android:id="@+id/readIntent1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erase Tag"
        android:padding="5dp"
        android:textStyle="bold"
         />  
    
	  <ImageView 
     	android:id="@+id/mainimage"
     	android:src="@drawable/tagread"
     	android:contentDescription="@string/cntnt_desc_tagread"
     	android:layout_width="wrap_content"
     	android:layout_height="wrap_content"
          android:layout_below="@+id/readIntent1"
          android:layout_centerHorizontal="true" />
	  
    <TextView
        android:id="@+id/readIntent2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bring the NFC tag close to the back of your device to erase it&apos;s contents"
        android:padding="5dp"
        android:textStyle="bold"
        android:layout_below="@+id/mainimage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>